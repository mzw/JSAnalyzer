<?xml version="1.0" encoding="utf-8"?>
<ImplementedAjaxDesignPatternInfomation>

<!-- QAsite  -->
	<Application name="QAsite" url="http://maezawa.honiden.nii.ac.jp/yuta/research/ex/QAsite/error/index.html">
		<Property id="0">
			<Name>User event registration</Name>
			<Description>An application should register user events in an onload callback</Description>
			<AjaxDesignPattern name="User Action" />
			<PropertyPattern name="Precedence">(App_event != arg_0) U (App_event == arg_1)</PropertyPattern>
			<Arguments>
				<Argument order="0">onload</Argument>
				<Argument order="1">EachUserEvent</Argument>
			</Arguments>
		</Property>
		<Property id="1">
			<Name>User event handler singleton</Name>
			<Description>An application can prevent multiple calls of specific user event handler</Description>
			<AjaxDesignPattern name="User Action" />
			<PropertyPattern name="Existence">&lt;&gt;((App_state == arg_0) &amp;&amp; (App_event == arg_1))</PropertyPattern>
			<Arguments>
				<Argument order="0">validateLogin</Argument>
				<Argument order="1">onmousedown</Argument>
			</Arguments>
		</Property>
		<Property id="2">
			<Name>Server response before activation</Name>
			<Description>An application should activate specific functionalities using results of asynchronous data retrieval after server response</Description>
			<AjaxDesignPattern name="On-Demand JavaScript" />
			<PropertyPattern name="Precedence">(App_event != arg_0) U (App_state == arg_1)</PropertyPattern>
			<Arguments>
				<Argument order="0">onComplete</Argument>
				<Argument order="1">onGood</Argument>
			</Arguments>
		</Property>
		<Property id="3">
			<Name>Seed before validate</Name>
			<Description>An application should get the seed before send login information</Description>
			<AjaxDesignPattern name="Direct Login" />
			<PropertyPattern name="Precedence">(App_state != arg_0) U (App_state == arg_1)</PropertyPattern>
			<Arguments>
				<Argument order="0">handleHttpGetSeed</Argument>
				<Argument order="1">validateLogin</Argument>
			</Arguments>
		</Property>
		<Property id="4">
			<Name>Disabled login form at validate response</Name>
			<Description>An application receives a login validate response, then makes the login form hidden</Description>
			<AjaxDesignPattern name="Direct Login" />
			<PropertyPattern name="Existence">&lt;&gt;((App_event == arg_0) &amp;&amp; (App_event == arg_1))</PropertyPattern>
			<Arguments>
				<Argument order="0">onComplete</Argument>
				<Argument order="1">onmousedown</Argument>
			</Arguments>
		</Property>
	</Application>
</ImplementedAjaxDesignPatternInfomation>
